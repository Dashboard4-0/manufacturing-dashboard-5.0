{
  "name": "ms5.0",
  "version": "1.0.0",
  "description": "Manufacturing System 5.0 - Production-ready MES platform",
  "private": true,
  "workspaces": [
    "libs/*",
    "services/*",
    "apps/*",
    "simulators/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:contract": "turbo run test:contract",
    "test:e2e": "turbo run test:e2e",
    "test:load": "turbo run test:load",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "db:migrate": "./tools/scripts/db-migrate.sh",
    "db:seed": "./tools/scripts/seed.sh",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.2",
    "@types/express": "4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "20.11.30",
    "@types/semver": "^7.7.1",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "autocannon": "^8.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "express": "4.19.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "multer": "^2.0.2",
    "prettier": "3.2.5",
    "semver": "^7.7.2",
    "turbo": "1.13.0",
    "typescript": "5.4.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.5",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
