{
  "name": "@ms5/edge-gateway",
  "version": "1.0.0",
  "description": "Edge Gateway with OPC UA ingestion and store-and-forward",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run --dir tests/unit",
    "test:contract": "vitest run --dir tests/contract",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo sqlite/*.db"
  },
  "dependencies": {
    "@ms5/shared": "workspace:*",
    "better-sqlite3": "9.4.3",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "kafkajs": "2.2.4",
    "node-opcua": "2.125.0",
    "node-cron": "3.0.3",
    "p-queue": "7.4.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.9",
    "@types/express": "4.17.21",
    "@types/node": "20.11.30",
    "@types/node-cron": "3.0.11",
    "supertest": "6.3.4",
    "tsx": "4.7.1",
    "vitest": "1.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
