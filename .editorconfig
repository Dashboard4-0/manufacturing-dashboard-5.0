root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx,json,yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[*.dart]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[*.sql]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.prisma]
indent_size = 2

[*.graphql]
indent_size = 2