{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env*"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT"]
    },
    "test": {
      "dependsOn": ["build"],
      "env": ["NODE_ENV"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "env": ["NODE_ENV"],
      "outputs": ["coverage/**"]
    },
    "test:contract": {
      "dependsOn": ["build"],
      "env": ["NODE_ENV"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "env": ["NODE_ENV", "E2E_BASE_URL"]
    },
    "test:load": {
      "dependsOn": ["build"],
      "env": ["NODE_ENV", "LOAD_TEST_URL"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:seed": {
      "cache": false,
      "env": ["DATABASE_URL"]
    }
  }
}
